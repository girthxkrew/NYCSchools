<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    android:layout_margin="7.5sp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="10sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/school_image"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/ic_school"
            card_view:layout_constraintVertical_bias="0.5"
            card_view:layout_constraintHorizontal_bias="0.05"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/school_name"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/school_name"
            android:layout_width="200sp"
            android:layout_height="100sp"
            android:textColor="@color/colorPrimary"
            android:autoSizeTextType="uniform"
            card_view:fontFamily="@font/school_time"
            android:ellipsize="end"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/school_image"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>